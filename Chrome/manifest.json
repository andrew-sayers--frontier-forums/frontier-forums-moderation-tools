{
	"name": "Frontier forums moderation tools",
	"author": "Andrew Sayers",
	"version": "1.9",
	"manifest_version": 2,
	"description": "Add new moderator stuff to the Frontier Forums",
	"update_url": "http://pileofstuff.org/frontier-forums-moderation-tools/frontier-forums-moderation-tools.crx",
	"background": {
		"scripts": ["background.js"]
	},
	"content_scripts": [
		{
			"matches": ["*://forums.frontier.co.uk/*"],
			"js": ["BabelExt.js", "jquery.min.js" , "extension.js"], // add others here if you like, i.e. jquery...
			"run_at": "document_end"
		}
	],
	"icons": { "16":"icon-16.png", "32":"icon-32.png", "48":"icon-48.png", "64":"icon-64.png", "128":"icon-128.png" },
	"permissions": [
		"contextMenus",
		"tabs",
		"history",
		"notifications"
	]
}
