{
	"name": "Frontier forums moderation tools",
	"author": "Andrew Sayers",
	"version": "3.8.1",
	"manifest_version": 2,
	"description": "Add moderator tools to the Frontier Forums",
	"background": {
		"scripts": [
			"preferences.js",
			"background.js"
		]
	},
	"content_scripts": [
		{
			"matches": [
				"*://forums.frontier.co.uk/*"
			],
			"js": [
				"BabelExt.js",
				"jquery-2.1.1.min.js",
				"selectionchange.js",
				"extension.js"
			],
			"run_at": "document_start"
		}
	],
	"icons": {
		"16": "icon-16.png",
		"32": "icon-32.png",
		"48": "icon-48.png",
		"64": "icon-64.png",
		"128": "icon-128.png"
	},
	"permissions": [
		"*://forums.frontier.co.uk/*",
		"contextMenus",
		"tabs",
		"history",
		"notifications",
		"storage"
	],
	"options_page": "options.html"
}
